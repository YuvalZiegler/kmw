{% extends "base.twig" %}

{% block content %}

  <div class="content-wrapper">
    <article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
      <section class="article-content">
        <div id="the-list-products" class="yz-row">

          {% for i in range(1, 4) %}
            {% include "/partials/_the-list-item.twig" %}
          {% endfor %}

        </div>
        <div class="the-content vs-3 s-10 center">
          {{ post.post_content }}
        </div>
      </section>
    </article>
  </div> <!-- /content-wrapper -->

{% endblock %}

